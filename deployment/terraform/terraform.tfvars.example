# Cloudflare Terraform Variables for Sentinel
# Copy this file to terraform.tfvars and fill in your values
#
# IMPORTANT: Never commit terraform.tfvars to version control!
# It contains sensitive credentials.

# =============================================================================
# Required Variables
# =============================================================================

# Cloudflare API token
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions:
#   - Zone:Read, Zone:Edit
#   - DNS:Read, DNS:Edit
#   - SSL and Certificates:Read, SSL and Certificates:Edit
#   - Firewall Services:Read, Firewall Services:Edit
#   - Zone WAF:Read, Zone WAF:Edit
cloudflare_api_token = "your-api-token-here"

# Zone ID for mindsmith.app
# Find at: Cloudflare Dashboard > mindsmith.app > Overview > Zone ID
cloudflare_zone_id = "your-zone-id-here"

# Account ID
# Find at: Cloudflare Dashboard > mindsmith.app > Overview > Account ID
cloudflare_account_id = "your-account-id-here"

# IP address of your VPS running Sentinel
origin_server_ip = "123.45.67.89"

# =============================================================================
# Optional Variables (uncomment to override defaults)
# =============================================================================

# Subdomain (default: "sentinel")
# subdomain = "sentinel"

# SSL mode (default: "strict")
# Options: off, flexible, full, strict
# ssl_mode = "strict"

# Minimum TLS version (default: "1.2")
# Options: 1.0, 1.1, 1.2, 1.3
# min_tls_version = "1.2"

# Rate limit (default: 100 requests per minute)
# rate_limit_requests_per_minute = 100

# Origin certificate validity (default: 5475 days = 15 years)
# origin_cert_validity_days = 5475

# WebSocket support (default: true)
# enable_websockets = true

# HTTP/2 support (default: true)
# enable_http2 = true

# HTTP/3 (QUIC) support (default: true)
# enable_http3 = true
